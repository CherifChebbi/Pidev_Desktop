                        <Insets right="5.0" />
                     </HBox.margin></TextField>
                  <Button fx:id="listeVille" mnemonicParsing="false" onAction="#listeVille" prefHeight="31.0" prefWidth="214.0" style="-fx-background-color: rgb(27, 60, 115);" text="Liste des Villes" textFill="WHITE">
