                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <HBox.margin>
                     <Insets left="20.0" right="10.0" top="20.0" />
                  </HBox.margin>
