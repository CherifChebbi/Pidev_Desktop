<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="10" stylesheets="@AjoutEvent.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ReservationFront2Controller">
    <!-- Barre de navigation horizontale -->
    <HBox alignment="CENTER" prefHeight="50" spacing="10" styleClass="center-pane" stylesheets="@HomeBack.css">
        <Button text="Accueil" />
        <Button text="Profil" />
        <Button text="Paramètres" />
        <!-- Ajoutez d'autres boutons au besoin -->
    </HBox>

    <!-- Conteneur pour la barre de navigation verticale à gauche et la grille des événements -->
    <HBox alignment="CENTER" spacing="10" styleClass="center-pane" stylesheets="@AjoutEvent.css">
        <!-- Barre de navigation verticale -->
        <VBox alignment="CENTER" spacing="10" styleClass="center-pane" stylesheets="@HomeBack.css">
            <Button text="Filtre 1" />
            <Button text="Filtre 2" />
            <Button text="Filtre 3" />
            <!-- Ajoutez d'autres boutons de filtre au besoin -->
        </VBox>

        <!-- Grille des événements enveloppée dans un ScrollPane -->
        <ScrollPane VBox.vgrow="ALWAYS">
            <content>
                <GridPane fx:id="eventGrid" hgap="10" vgap="10">
                    <!-- Les événements seront ajoutés dynamiquement ici -->
                </GridPane>
            </content>
        </ScrollPane>
    </HBox>
</VBox>
