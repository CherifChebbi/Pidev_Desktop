<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Monument.AfficherMonument">

    <children>
        <VBox layoutX="-1.0" layoutY="72.0" prefHeight="474.0" prefWidth="1000.0" style="-fx-background-color: rgb(227, 254, 247);">
            <children>
            <HBox prefHeight="390.0" prefWidth="1000.0">
               <children>
                      <TableView fx:id="MonumentTable" cache="true" onMouseClicked="#onTableRowClickedMonument" prefHeight="282.0" prefWidth="760.0">
                          <columns>
                              <TableColumn fx:id="id_Monument_Column" prefWidth="75.0" text="Id_monument" />
                              <TableColumn fx:id="id_Ville_Column" prefWidth="75.0" text="Id_ville" />
                              <TableColumn fx:id="nom_Column" prefWidth="75.0" text="Nom" />
                              <TableColumn fx:id="desc_Column" prefWidth="75.0" text="Desciption" />
                              <TableColumn fx:id="latitude_Column" prefWidth="75.0" text="Latitude" />
                              <TableColumn fx:id="longitude_Column" prefWidth="75.0" text="Longitude" />
                          </columns>
                          <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                          </columnResizePolicy>
                     <HBox.margin>
                        <Insets left="20.0" right="10.0" top="20.0" />
                     </HBox.margin>
                      </TableView>
                  <ImageView fx:id="imageView_monument" fitHeight="200" fitWidth="200">
                     <HBox.margin>
                        <Insets right="10.0" top="20.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="70.0" prefWidth="1000.0" style="-fx-background-color: rgb(19, 93, 102);">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <TextField fx:id="searchBar" alignment="TOP_CENTER" onKeyReleased="#handleSearch" promptText="Monument Ã  rechercher" style="-fx-background-color: rgb(238, 245, 255);" />
                    </children>
                    <HBox.margin>
                        <Insets right="200.0" />
                    </HBox.margin>
                </HBox>
                <Button fx:id="AjouterMonument_Button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#AjouterMonument" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: rgb(19, 93, 102);" text="Ajouter" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="SupprimerMonument_Button" mnemonicParsing="false" onAction="#SupprimerMonument" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: rgb(19, 93, 102);" text="Supprimer" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="ModifierMonument" mnemonicParsing="false" onAction="#ModifierMonument" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: rgb(19, 93, 102);" text="Modifier" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </HBox.margin>
                </Button>
            <Button fx:id="returnToListVille" mnemonicParsing="false" onAction="#returnToListVille" prefHeight="32.0" prefWidth="92.0" style="-fx-background-color: rgb(19, 93, 102);" text="Return" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
               </HBox.margin>
            </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
