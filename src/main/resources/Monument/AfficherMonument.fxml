<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Monuments.AfficherMonuments">
    <children>
        <VBox layoutX="-1.0" layoutY="72.0" prefHeight="474.0" prefWidth="900.0" style="-fx-background-color: rgb(235, 243, 232);">
            <children>
                <TableView fx:id="MonumentsTable" cache="true" prefHeight="371.0" prefWidth="860.0">
                    <columns>
                        <TableColumn fx:id="id_Column" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="nom_Column" prefWidth="75.0" text="Nom" />
                        <TableColumn fx:id="img_Column" prefWidth="75.0" text="Image" />
                        <TableColumn fx:id="desc_Column" prefWidth="75.0" text="Desciption" />
                        <TableColumn fx:id="latitude_Column" prefWidth="75.0" text="Latitude" />
                        <TableColumn fx:id="longitude_Column" prefWidth="75.0" text="Longitude" />
                    </columns>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="70.0" prefWidth="900.0" style="-fx-background-color: rgb(58, 77, 57);">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <TextField fx:id="searchBar" alignment="TOP_CENTER" onKeyReleased="#handleSearch" promptText="Monuments Ã  rechercher" style="-fx-background-color: rgb(238, 245, 255);" />
                    </children>
                    <HBox.margin>
                        <Insets right="200.0" />
                    </HBox.margin>
                </HBox>
                <Button fx:id="AjouterMonuments_Button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#AjouterMonuments" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: rgb(58, 77, 57);" text="Ajouter" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="SupprimerMonuments_Button" mnemonicParsing="false" onAction="#SupprimerMonuments" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: rgb(58, 77, 57);" text="Supprimer" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="ModifierMonuments" mnemonicParsing="false" onAction="#ModifierMonuments" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: rgb(58, 77, 57);" text="Modifier" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
