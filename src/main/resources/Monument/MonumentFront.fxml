<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: rgb(238, 245, 255);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Monument.MonumentFront">
    <VBox prefHeight="600.0" prefWidth="1000.0">
        <children>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="49.0" prefWidth="1000.0" style="-fx-background-color: rgb(23, 107, 135);">
                <children>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Button fx:id="returnVilles" mnemonicParsing="false" onAction="#returnVilles" prefHeight="34.0" prefWidth="139.0" style="-fx-background-color: rgb(23, 107, 135);" text="Return" textFill="WHITE">
                                <HBox.margin>
                                    <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
                                </HBox.margin>
                                <font>
                                    <Font name="System Bold Italic" size="14.0" />
                                </font>
                            </Button>
                        </children>
                    </HBox>
                </children></HBox>

            <!-- GridPane for displaying Monument cards -->
            <GridPane fx:id="cartesMonumentGrid" prefWidth="1000.0">
                <VBox.margin>
                    <Insets left="5.0" right="5.0" />
                </VBox.margin></GridPane>
        </children>
    </VBox>
</AnchorPane>
